<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page" xmlns:cast="nativescript-cast">
    <Page.actionBar>
        <ActionBar title="nativescript-cast" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
        <ScrollView class="h-full">
          <StackLayout>
            <Button text="Test nativescript-cast" tap="{{ testIt }}" class="btn btn-primary"/>
            <cast:CastButton
            id="cast"
            color="#ffffff"
            cast="{{ handleCastEvent }}"
          />
          </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>
